{
  "name": "pi-jukebox",
  "version": "1.1.0",
  "description": "A collaborative jukebox for Raspberry Pi with web-based music player",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "scan-music": "node -e \"require('./server.js').scanMusicFiles()\"",
    "update-durations": "node -e \"require('./server.js').updateSongDurations()\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "music-metadata": "^7.14.0",
    "node-cron": "^3.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "jukebox",
    "music",
    "raspberry-pi",
    "collaborative",
    "web-player"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}